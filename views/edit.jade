extends layout

block content
  .pageBanner
    a(href="/") 
      h3 #{pageTitle}
  .content
    .title
      h4 Edit this article
    .errormsg
      if errors
        ul Please correct the errors below:
        br
        for each in errors
          li= each
    form(method="post" action="/article/" +  theArticle._id)
      .field
        .left
          label(for="title") Title 
        .right
          input(type="text" name="title" id="title" value=theArticle.title)
      .field
        .left
          label(for="url") Background Url 
        .right
          input(type="text" name="url" id="url" value=theArticle.url)
      .field
        .checkbox
          input(type="checkbox" name="dark" id="dark" checked=theArticle.dark)
          label(for="dark") Background image has dark colors
      .field
        .left
          label(for="excerpt") Excerpt
        .right
          textarea(name="excerpt" id="excerpt" rows="10" cols="50") #{theArticle.excerpt}
      .field
        .left
          label(for="body") Body
        .right
          textarea(name="body" id="body" rows="10" cols="50") #{theArticle.body}
      .field
        .button
          input(type="submit" name="submit" id="submit" value="Update Article")
    form(id="deleteForm" method="post" action="/delete/" + theArticle._id)
      .field
        .button
          input(type="submit" id="delete" name="delete" value="Delete")
